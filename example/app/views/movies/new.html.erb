<h1>New Movie</h1>

<% form_for @movie do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= link_to_new_child(f, 'actors') %>
  <div id="actors">
    <% fields_for :actors do |actor_fields| %>
      <%= render :partial => 'actor_fields', :locals => {:f => actor_fields} %>
    <% end %>
  </div>
<% end %>
